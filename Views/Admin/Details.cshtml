@model User
@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>User Details</h2>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">User Information</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>User ID:</th>
                            <td><strong>@Model.UserId</strong></td>
                        </tr>
                        <tr>
                            <th>Full Name:</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Mobile Number:</th>
                            <td>@Model.MobileNumber</td>
                        </tr>
                        <tr>
                            <th>Sponsor:</th>
                            <td>@(Model.Sponsor?.UserId ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Created Date:</th>
                            <td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Direct Referrals (@Model.Referrals.Count)</h4>
                </div>
                <div class="card-body">
                    @if (Model.Referrals.Any())
                    {
                        <ul class="list-group">
                            @foreach (var referral in Model.Referrals)
                            {
                                <li class="list-group-item">
                                    <strong>@referral.UserId</strong> - @referral.FullName
                                    <span class="badge @(referral.IsActive ? "bg-success" : "bg-danger") float-end">
                                        @(referral.IsActive ? "Active" : "Inactive")
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No direct referrals yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

