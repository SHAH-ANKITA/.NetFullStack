@model List<User>
@{
    ViewData["Title"] = "Generation Tree";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Generation Tree</h2>
            <a asp-action="Index" class="btn btn-secondary">Back to User List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        @foreach (var rootUser in Model)
                        {
                            <div class="tree-container mb-4">
                                @await Html.PartialAsync("_UserTreeNode", new Tuple<User, bool, int>(rootUser, true, 1))
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No users found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .tree-container {
            padding: 20px;
        }
        .tree-node {
            display: inline-block;
            margin: 10px;
            vertical-align: top;
        }
        .node-content {
            background: #f8f9fa;
            border: 2px solid #007bff;
            border-radius: 8px;
            padding: 10px;
            min-width: 150px;
            text-align: center;
        }
        .tree-node.root .node-content {
            background: #007bff;
            color: white;
            font-weight: bold;
        }
        .tree-children {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }
    </style>
}
