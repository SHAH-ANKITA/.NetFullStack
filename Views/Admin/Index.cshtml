@model List<User>
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Admin Panel - All Users</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">User Management</h4>
                    <a asp-action="GenerationTree" class="btn btn-light btn-sm">View Generation Tree</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>User ID</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Sponsor</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><strong>@user.UserId</strong></td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>@user.MobileNumber</td>
                                        <td>@(user.Sponsor?.UserId ?? "N/A")</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                                            <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")">
                                                    @(user.IsActive ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

