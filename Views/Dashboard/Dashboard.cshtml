@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Welcome, @Model.UserName</h2>
            <p class="text-muted">User ID: @Model.UserId</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Direct Referrals</h5>
                    <h2 class="mb-0">@Model.TotalDirectReferrals</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Team Members</h5>
                    <h2 class="mb-0">@Model.TotalTeamMembers</h2>
                    <small>Up to 3 levels</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Income</h5>
                    <h2 class="mb-0">₹@Model.TotalIncome.ToString("N2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Your Referral ID</h5>
                    <h4 class="mb-0">@Model.UserId</h4>
                    <small>Share this with others</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Generation Income Details</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Level</th>
                                    <th>Member Count</th>
                                    <th>Income per Member</th>
                                    <th>Total Income</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var level in Model.LevelDetails)
                                {
                                    <tr>
                                        <td><strong>Level @level.Level</strong></td>
                                        <td>@level.MemberCount</td>
                                        <td>
                                            @if (level.Level == 1)
                                            {
                                                <span>₹100</span>
                                            }
                                            else if (level.Level == 2)
                                            {
                                                <span>₹50</span>
                                            }
                                            else if (level.Level == 3)
                                            {
                                                <span>₹25</span>
                                            }
                                        </td>
                                        <td><strong>₹@level.Income.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Your Referral Network</h4>
                    <span class="badge bg-light text-primary">Up to 3 levels</span>
                </div>
                <div class="card-body">
                    @if (Model.ReferralNetwork.Any())
                    {
                        <div class="referral-tree-wrapper">
                            <div class="referral-tree">
                                <ul>
                                    <li>
                                        <div class="node-content root">
                                            <strong>@Model.UserId</strong>
                                            <span>@Model.UserName</span>
                                        </div>
                                        @await Html.PartialAsync("_ReferralTree", Model.ReferralNetwork)
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">You have not referred anyone yet. Share your referral ID <strong>@Model.UserId</strong> to expand your network.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

