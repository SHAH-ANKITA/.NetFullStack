@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="card border-0 bg-gradient-primary text-white profile-hero">
                <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    <div>
                        <h2 class="fw-bold mb-1">@Model.FullName</h2>
                        <p class="mb-1">Member ID: <strong>@Model.UserId</strong></p>
                        <p class="mb-0">Joined on @Model.JoinedOn</p>
                    </div>
                    <div class="mt-3 mt-md-0 text-md-end">
                        <span class="badge bg-light text-primary me-2">@Model.Role</span>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">@(Model.IsActive ? "Active" : "Inactive")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-6">
            <div class="card h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <span class="profile-icon me-3"><i class="bi bi-envelope"></i></span>
                        <div>
                            <p class="text-muted mb-0">Email</p>
                            <p class="mb-0 fw-semibold">@Model.Email</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="profile-icon me-3"><i class="bi bi-telephone"></i></span>
                        <div>
                            <p class="text-muted mb-0">Mobile</p>
                            <p class="mb-0 fw-semibold">@Model.MobileNumber</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-8 col-lg-6">
            <div class="card h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Team Performance</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="metric-card">
                                <span class="metric-label">Direct Referrals</span>
                                <span class="metric-value text-primary">@Model.DirectReferrals</span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="metric-card">
                                <span class="metric-label">Team Members</span>
                                <span class="metric-value text-success">@Model.TeamMembers</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="metric-card">
                                <span class="metric-label">Total Income</span>
                                <span class="metric-value text-info">â‚¹@Model.TotalIncome.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">Sponsor Details</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SponsorUserId))
                    {
                        <p class="mb-2">Sponsor ID</p>
                        <div class="badge bg-primary-subtle text-primary px-3 py-2">
                            @Model.SponsorUserId
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No sponsor assigned.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card h-100">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Direct Referrals</h5>
                    <span class="text-muted small">Showing latest @(Model.RecentReferrals.Count) referrals</span>
                </div>
                <div class="card-body">
                    @if (Model.RecentReferrals.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>User ID</th>
                                        <th>Name</th>
                                        <th>Joined On</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var referral in Model.RecentReferrals)
                                    {
                                        <tr>
                                            <td><strong>@referral.UserId</strong></td>
                                            <td>@referral.FullName</td>
                                            <td>@referral.JoinedOn.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <span class="badge @(referral.IsActive ? "bg-success" : "bg-danger")">
                                                    @(referral.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No direct referrals yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-end">
            <a asp-action="Dashboard" class="btn btn-outline-primary">Back to Dashboard</a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #0d6efd, #6ea8fe);
        }

        .profile-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(13, 110, 253, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #0d6efd;
        }

        .metric-card {
            background: rgba(13, 110, 253, 0.05);
            border-radius: 10px;
            padding: 20px 10px;
        }

        .metric-label {
            display: block;
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        .metric-value {
            font-size: 1.4rem;
            font-weight: 700;
        }
    </style>
}

